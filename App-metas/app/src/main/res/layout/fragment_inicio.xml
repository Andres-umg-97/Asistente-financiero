<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorBlueLight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="64dp"> <!-- Margen inferior grande -->

        <!-- Saldo total -->
        <TextView
            android:id="@+id/tv_saldo_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/saldo_total"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center"
            android:paddingBottom="12dp"/>

        <!-- Reporte general (movido arriba) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reporte_general"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tv_reporte_general"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sin_movimientos"
            android:textColor="@color/black"
            android:background="@color/white"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Bot칩n agregar cuenta -->
        <Button
            android:id="@+id/btn_agregar_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agregar_cuenta_nueva"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"/>

        <!-- Bot칩n enviar reporte por Gmail -->
        <Button
            android:id="@+id/btn_enviar_reporte_gmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:text="游닎 Enviar Reporte por Gmail"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#4CAF50"
            android:elevation="4dp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>

        <!-- Gr치ficas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gr치fica de gastos"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart_ingresos_gastos"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grafica_ahorros_metas"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart_ahorros_metas"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"/>

        <!-- Margen inferior para evitar que el men칰 tape el contenido -->
        <View
            android:layout_width="match_parent"
            android:layout_height="64dp" />

    </LinearLayout>
</ScrollView>
