<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorBlueLight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/metas"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progreso de tus metas de ahorro"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart_metas"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lista de metas"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <!-- Aquí podrías agregar un RecyclerView para mostrar metas -->

        <Button
            android:id="@+id/btn_aportar_meta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aportar a meta"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_agregar_meta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar meta"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"/>

        <!-- Historial de Metas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historial de Metas"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:paddingTop="24dp"
            android:paddingBottom="8dp"/>
        <LinearLayout
            android:id="@+id/layout_historial_metas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    </LinearLayout>
</ScrollView>
